page {
  background: #f8f8f8;
  padding-top: 16rpx;
}
.b-b {
  margin-top: 20rpx;
}
.row {
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 30rpx;
  height: 110rpx;
  background: #fff;
}
.row .tit {
  flex-shrink: 0;
  width: 160rpx;
  font-size: 30rpx;
  color: #303133;
}
.row .input {
  flex: 1;
  font-size: 30rpx;
  color: #303133;
}
.row .input label {
  margin-left: 20rpx;
}
.row .price {
  font-size: 32rpx;
  color: #303133;
}
.row .price:before {
  content: '￥';
  font-size: 24rpx;
  margin: 0 2rpx 0 8rpx;
}
.row .icon-shouhuodizhi {
  font-size: 36rpx;
  color: #909399;
}
.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 80rpx;
  margin: 60rpx auto;
  font-size: 32rpx;
  color: #fff;
  background-color: #fa436a;
  border-radius: 10rpx;
  box-shadow: 1px 2px 5px #fa436a;
}

