page {
  background: #f8f8f8;
  padding-bottom: 100rpx;
}
.hot-wrapper {
  background: #fff;
  margin: 0 10rpx;
  padding-top: 20rpx;
}
.all-wrapper {
  background: #fff;
}
.all-wrapper .tag-view {
  padding: 20rpx 0;
  display: flex;
  flex-flow: row wrap;
}
.all-wrapper .tag-view .tag-item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.contact-btn {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 16rpx;
  z-index: 95;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #62cd6d;
  border-radius: 10rpx;
  box-shadow: 1px 2px 5px #62cd6d;
}
.navbar {
  display: flex;
  height: 40px;
  padding: 0 5px;
  background: #fff;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.06);
  /* position: relative; */
  z-index: 10;
}
.navbar .nav-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 15px;
  color: #303133;
  position: relative;
}
.navbar .nav-item.current {
  color: #62cd6d;
  font-weight: bold;
}
.navbar .nav-item.current:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 44px;
  height: 0;
  border-bottom: 2px solid #62cd6d;
}

