/* 商品列表 */
.room-list {
  display: flex;
  flex-wrap: wrap;
}
.room-list .room-item {
  width: 100%;
  padding: 20rpx;
  margin: 20rpx;
  background: #fff;
}
.room-list .image-wrapper {
  width: 100%;
  height: 330rpx;
  border-radius: 3px;
  overflow: hidden;
}
.room-list .image-wrapper image {
  width: 100%;
  height: 100%;
  opacity: 1;
}
.room-list .title {
  font-size: 28rpx;
  color: #303133;
  line-height: 60rpx;
}
.room-list .desc-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 10rpx;
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 12px;
}

