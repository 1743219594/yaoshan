.nav-bar {
  position: relative;
  z-index: 10;
  height: 90rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  background-color: #fff;
}
.nav-bar .nav-item {
  display: inline-block;
  width: 150rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 33rpx;
  color: #303133;
  position: relative;
}
.nav-bar .nav-item:after {
  content: '';
  width: 0;
  height: 0;
  border-bottom: 4rpx solid #62cd6d;
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  transition: .3s;
}
.nav-bar .current {
  color: #62cd6d;
  font-weight: bold;
}
.nav-bar .current:after {
  width: 50%;
}
